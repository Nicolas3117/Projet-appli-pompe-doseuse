<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Thème clair, MaterialComponents, sans ActionBar -->
    <style name="Theme.ESP32PumpControl" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Couleurs principales -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primaryContainer</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondaryContainer</item>

        <!-- Fond -->
        <item name="android:colorBackground">@color/background</item>

        <!-- Texte global -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <!-- Barres système -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/background</item>

        <!-- Forcer le texte noir dans les boutons (global) -->
        <item name="materialButtonStyle">@style/CustomButton</item>
    </style>

    <!-- Style global des boutons (garde ton rendu actuel) -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/textPrimary</item> <!-- Noir -->
        <item name="backgroundTint">@color/primary</item> <!-- Gris -->
    </style>

    <!-- ✅ Style UNIQUEMENT pour les boutons "Modifier/Supprimer" dans les encarts programmation -->
    <style name="Widget.App.ScheduleActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <!-- ❌ PAS de insetTop/insetBottom : ça cassait le linking -->
    </style>

    <!-- Petit style de texte existant -->
    <style name="TextStatusPrimary">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <!-- ✅ Style commun TabLayout : fond rouge très pâle + indicateur + ripple, texte noir gras -->
    <style name="Widget.App.Tabs" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/tab_selected_red_pale</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabRippleColor">@color/tab_selected_red_pale</item>
        <item name="tabBackground">@drawable/tab_selected_background</item>

        <!-- Texte onglets : noir -->
        <item name="tabTextColor">@color/textPrimary</item>
        <item name="tabSelectedTextColor">@color/textPrimary</item>

        <!-- Texte onglets : gras -->
        <item name="tabTextAppearance">@style/Widget.App.TabText</item>
    </style>

    <!-- Apparence du texte d’onglet (gras) -->
    <style name="Widget.App.TabText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
