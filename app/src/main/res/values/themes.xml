<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Thème clair, Material3, sans ActionBar -->
    <style name="Theme.ESP32PumpControl" parent="Theme.Material3.Light.NoActionBar">

        <!-- Couleurs principales -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primaryContainer</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondaryContainer</item>

        <!-- Fond -->
        <item name="android:colorBackground">@color/background</item>

        <!-- Texte global -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <!-- Barres système -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/background</item>

        <!-- Style global des boutons (garde ton rendu actuel partout) -->
        <item name="materialButtonStyle">@style/CustomButton</item>
    </style>

    <!-- Style global des boutons (forme ovale conservée) -->
    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <!-- ✅ Style UNIQUEMENT pour les boutons icônes Modifier/Supprimer dans les encarts programmation -->
    <style name="Widget.App.ScheduleIconPillButton" parent="Widget.Material3.Button">
        <!-- Taille pilule -->
        <item name="android:minWidth">72dp</item>
        <item name="android:minHeight">40dp</item>

        <!-- On supprime les insets framework (SAFE) pour éviter un centrage bancal -->
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <!-- Padding nul : icône centrée -->
        <item name="android:padding">0dp</item>

        <!-- Visuel -->
        <item name="backgroundTint">@color/primaryContainer</item>
        <item name="cornerRadius">20dp</item>

        <!-- Icône noire -->
        <item name="iconTint">@color/textPrimary</item>

        <!-- ❌ PAS de insetTop/insetBottom (Material) : ça cassait le linking -->
    </style>

    <style name="TextStatusPrimary">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <!-- ✅ Style commun TabLayout : fond rouge très pâle + indicateur + ripple, texte noir gras -->
    <style name="Widget.App.Tabs" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/tab_selected_red_pale</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabRippleColor">@color/tab_selected_red_pale</item>
        <item name="tabBackground">@drawable/tab_selected_background</item>

        <item name="tabTextColor">@color/textPrimary</item>
        <item name="tabSelectedTextColor">@color/textPrimary</item>

        <item name="tabTextAppearance">@style/Widget.App.TabText</item>
    </style>

    <style name="Widget.App.TabText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
