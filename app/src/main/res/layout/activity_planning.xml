<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- ================= RETOUR (SAFE TABLETTE) ================= -->
    <Button
        android:id="@+id/btn_planning_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="← Retour"
        android:textSize="17sp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="0dp" />

    <!-- ================= SÉLECTEUR ESP ================= -->
    <com.esp32pumpwifi.app.NoInterceptHorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/layoutEspSelector"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="6dp" />
    </com.esp32pumpwifi.app.NoInterceptHorizontalScrollView>

    <!-- ================= PLANNING SCROLLABLE ================= -->
    <com.esp32pumpwifi.app.NoInterceptHorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <com.esp32pumpwifi.app.NoInterceptScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.esp32pumpwifi.app.PlanningView
                android:id="@+id/planningView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.esp32pumpwifi.app.NoInterceptScrollView>
    </com.esp32pumpwifi.app.NoInterceptHorizontalScrollView>

</LinearLayout>
