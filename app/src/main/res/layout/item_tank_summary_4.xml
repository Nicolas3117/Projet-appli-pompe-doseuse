<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/tv_tank_name_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pompe 4"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"/>

    <ProgressBar
        android:id="@+id/pb_tank_4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/tank_progress_drawable"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/tv_tank_percent_4"
            style="@style/TextStatusPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="-- %" />

        <TextView
            android:id="@+id/tv_tank_ml_4"
            style="@style/TextStatusPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="—"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tank_days_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="—"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginTop="2dp"/>

</LinearLayout>
