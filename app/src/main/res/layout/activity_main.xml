<?xml version="1.0" encoding="utf-8"?>
<com.esp32pumpwifi.app.ZoomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/pump_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ================= TITRE ================= -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_control_pumps"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- ================= MATÃ‰RIELS ================= -->
            <Button
                android:id="@+id/btn_materials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_materials"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- ================= MODULE ACTIF + Ã‰TAT + PLANNING (alignÃ©s) ================= -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- ================= MODULE ACTIF ================= -->
                    <TextView
                        android:id="@+id/tv_active_module"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/active_module_label"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_connection_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ã‰tat : inconnu"
                        android:textSize="19sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tvRtcTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--:--"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp" />

                    <Button
                        android:id="@+id/btn_planning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:text="ðŸ“Š Planning"
                        android:textSize="16sp"
                        android:background="@drawable/bg_pill_planning_ripple"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- ================= ðŸ”´ BADGE ALERTE GLOBALE ================= -->
            <TextView
                android:id="@+id/tv_days_alert_badge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âš ï¸ Un ou plusieurs bidons arrivent Ã  vide"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/bg_badge_red"
                android:visibility="gone"
                android:layout_marginBottom="12dp" />

            <!-- ================= ðŸŸ¢ NIVEAU DES RÃ‰SERVOIRS ================= -->
            <LinearLayout
                android:id="@+id/layout_tank_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/secondaryContainer"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Niveau des rÃ©servoirs"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp" />

                <!-- Pompe 1 -->
                <include layout="@layout/item_tank_summary_1" />

                <!-- Pompe 2 -->
                <include layout="@layout/item_tank_summary_2" />

                <!-- Pompe 3 -->
                <include layout="@layout/item_tank_summary_3" />

                <!-- Pompe 4 -->
                <include layout="@layout/item_tank_summary_4" />

            </LinearLayout>

            <!-- ================= ðŸ“Š SUIVI QUOTIDIEN ================= -->
            <LinearLayout
                android:id="@+id/layout_daily_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/secondaryContainer"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suivi quotidien"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp" />

                <!-- Pompe 1 -->
                <include layout="@layout/item_daily_summary_1" />

                <!-- Pompe 2 -->
                <include layout="@layout/item_daily_summary_2" />

                <!-- Pompe 3 -->
                <include layout="@layout/item_daily_summary_3" />

                <!-- Pompe 4 -->
                <include layout="@layout/item_daily_summary_4" />

            </LinearLayout>

            <!-- ================= PROGRAMMATION ================= -->
            <Button
                android:id="@+id/btn_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_schedule_pumps"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ================= DOSAGES MANUELS ================= -->
            <Button
                android:id="@+id/btn_manual_dose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/manual_dose"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ================= RECHARGER LES RÃ‰SERVOIRS ================= -->
            <Button
                android:id="@+id/btn_refill_tanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/refill_tanks"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ================= Ã‰TALONNAGE ================= -->
            <Button
                android:id="@+id/btn_calibration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_calibration"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <!-- BONUS fallback: espace fixe bas pour appareils rÃ©calcitrants -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/pump_control_bottom_extra" />

        </LinearLayout>
    </ScrollView>
</com.esp32pumpwifi.app.ZoomLayout>
