<?xml version="1.0" encoding="utf-8"?>
<com.esp32pumpwifi.app.ZoomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_calibration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp"
        android:clipToPadding="false"
        android:background="#ECECEC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true">

            <Button
                android:id="@+id/btn_calibration_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Retour"
                android:textSize="17sp"
                android:background="?android:attr/selectableItemBackground"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp" />

            <!-- ================= ÉTALONNAGE & RÉSERVOIRS ================= -->

            <!-- ================= POMPE 1 ================= -->
            <include
                layout="@layout/block_pump_calibration_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- ================= POMPE 2 ================= -->
            <include
                layout="@layout/block_pump_calibration_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- ================= POMPE 3 ================= -->
            <include
                layout="@layout/block_pump_calibration_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- ================= POMPE 4 ================= -->
            <include
                layout="@layout/block_pump_calibration_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

            <!-- ================= RENOMMAGE (EN BAS) ================= -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Renommer les pompes"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edit_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom pompe 1"
                android:inputType="textCapWords"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/edit_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom pompe 2"
                android:inputType="textCapWords"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/edit_name3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom pompe 3"
                android:inputType="textCapWords"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/edit_name4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom pompe 4"
                android:inputType="textCapWords"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/btn_save_names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enregistrer les noms" />

            <!-- ✅ Vide encore plus confortable pour clavier tablette -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="360dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</com.esp32pumpwifi.app.ZoomLayout>
