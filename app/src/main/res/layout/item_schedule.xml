<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Ligne 1 : Pompe (caché) + Numéro + Heure + Quantité + Switch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Nom pompe (caché car déjà dans l’onglet) -->
        <TextView
            android:id="@+id/tv_pump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pompe 1"
            android:textSize="16sp"
            android:textColor="@color/textPrimary"
            android:gravity="center_vertical"
            android:visibility="gone" />

        <!-- ✅ Numéro du programme (aligné bien à gauche) -->
        <TextView
            android:id="@+id/tv_index"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/secondary"
            android:gravity="center_vertical"
            android:textAlignment="center" />

        <!-- Heure -->
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00"
            android:textSize="16sp"
            android:textColor="@color/textPrimary"
            android:gravity="center_vertical" />

        <!-- Quantité -->
        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 mL"
            android:textSize="16sp"
            android:textColor="@color/textPrimary"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical" />

        <!-- Spacer flexible pour pousser le Switch à droite -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Switch Activer -->
        <Switch
            android:id="@+id/sw_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activer"
            android:textColor="@color/textPrimary"
            android:trackTint="@color/switch_track_colors" />
    </LinearLayout>

    <!-- Ligne 2 : Boutons Modifier / Supprimer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center">

        <!-- Bouton Modifier -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit"
            style="@style/Widget.App.ScheduleIconPillButton"
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Modifier"
            android:text=""
            android:gravity="center"
            android:textAlignment="center"
            android:padding="0dp"
            app:icon="@drawable/ic_edit_24"
            app:iconGravity="textTop"
            app:iconPadding="0dp" />

        <!-- Bouton Supprimer -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            style="@style/Widget.App.ScheduleIconPillButton"
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:contentDescription="Supprimer"
            android:text=""
            android:gravity="center"
            android:textAlignment="center"
            android:padding="0dp"
            app:icon="@drawable/ic_delete_24"
            app:iconGravity="textTop"
            app:iconPadding="0dp" />
    </LinearLayout>

</LinearLayout>
