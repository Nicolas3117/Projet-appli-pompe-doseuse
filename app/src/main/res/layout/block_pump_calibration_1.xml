<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#E0E0E0"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pompe 1"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- ✅ Nouveau titre au-dessus du champ Durée -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calibration"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_duration1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Durée recommandée : 30 s"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edit_volume1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Volume (mL)"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btn_start1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Démarrer" />

    <Button
        android:id="@+id/btn_calc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculer" />

    <TextView
        android:id="@+id/tv_result1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Niveau du réservoir"
        android:textStyle="bold"
        android:layout_marginTop="6dp" />

    <TextView
        android:id="@+id/tv_tank_level1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restant : -- %" />

    <EditText
        android:id="@+id/edit_tank_capacity1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Volume du réservoir plein (mL)"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume du réservoir plein en mL"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="6dp" />

    <EditText
        android:id="@+id/edit_tank_alert1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Seuil d’alerte (%)"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alerte déclenchée sous ce pourcentage du volume total"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="6dp" />

    <Button
        android:id="@+id/btn_tank_reset1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Réservoir rechargé" />

</LinearLayout>
