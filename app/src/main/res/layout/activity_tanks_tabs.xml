<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <!-- ✅ Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title="@string/tanks_title"
        android:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back_32"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleCentered="true" />

    <!-- ✅ Header "Retour" (stable Android 7→15) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_header_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="0dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Retour"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="17sp" />
    </LinearLayout>

    <!-- ✅ Onglets des réservoirs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_tanks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicatorFullWidth="true" />

    <!-- ✅ Pages par réservoir -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_tanks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
