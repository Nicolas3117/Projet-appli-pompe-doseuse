<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#E0E0E0"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/tv_title3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pompe 3"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- ✅ Nouveau titre au-dessus du champ Durée -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calibration"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_duration3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Durée recommandée : 30 s"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edit_volume3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Volume 1 (mL)"
        android:inputType="numberDecimal"
        android:digits="0123456789.," />

    <!-- ✅ Nouveau champ optionnel pour moyenne -->
    <EditText
        android:id="@+id/edit_volume3_bis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Volume 2 (mL) - optionnel (moyenne)"
        android:inputType="numberDecimal"
        android:digits="0123456789.,"
        android:layout_marginBottom="6dp" />

    <Button
        android:id="@+id/btn_start3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Démarrer" />

    <Button
        android:id="@+id/btn_calc3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculer" />

    <TextView
        android:id="@+id/tv_result3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
