<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_refill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="#ECECEC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Niveau du réservoir"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/tv_tank_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restant : -- %" />

            <EditText
                android:id="@+id/edit_tank_capacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Volume du réservoir plein (mL)"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume du réservoir plein en mL"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_tank_alert"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Seuil d’alerte (%)"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:singleLine="true" />

                <ImageButton
                    android:id="@+id/btn_save_tank_alert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/save_threshold"
                    android:src="@android:drawable/ic_menu_save"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alerte déclenchée sous ce pourcentage du volume total"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="6dp" />

            <Button
                android:id="@+id/btn_tank_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Réservoir rechargé" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
